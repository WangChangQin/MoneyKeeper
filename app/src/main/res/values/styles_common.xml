<resources>

    <style name="AppCompatToolBar" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@color/colorTextTitle</item>
        <item name="titleTextColor">@color/colorTextTitle</item>
        <item name="actionMenuTextColor">@color/colorTextTitle</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ToolBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LinearRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layoutManager">android.support.v7.widget.LinearLayoutManager</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AddFAB">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_margin">25dp</item>
        <item name="srcCompat">@drawable/ic_add</item>
    </style>
</resources>
