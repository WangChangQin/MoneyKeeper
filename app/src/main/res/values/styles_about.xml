    <!-- 覆盖 AboutPage.Header.Icon 增加上外边距 -->
    <style name="AboutPage.Header.Icon">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

</resources>
