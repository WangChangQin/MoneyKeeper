<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List" />

        <import type="me.bakumon.moneykeeper.database.entity.SumMoneyBean" />

        <variable
            name="sumMoneyBeanList"
            type="List&lt;SumMoneyBean>" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="25dp"
        tools:background="@drawable/bg_gradient">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHeadTextSecond"
                app:text_income="@{sumMoneyBeanList}"
                tools:text="@string/text_month_income" />

            <TextView
                android:id="@+id/tv_month_outlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorHeadTextNormal"
                android:textSize="34sp"
                app:text_month_income="@{sumMoneyBeanList}"
                tools:text="0" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month_income_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHeadTextSecond"
                app:text_assets="@{sumMoneyBeanList}"
                tools:text="@string/text_assets" />

            <!-- TODO 点击效果，背景和文字 -->
            <TextView
                android:id="@+id/tv_month_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorHeadTextNormal"
                android:textSize="34sp"
                app:text_head_assets="@{sumMoneyBeanList}"
                tools:text="0" />
        </LinearLayout>
    </LinearLayout>
</layout>