<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context="me.bakumon.moneykeeper.ui.add.OptionFragment">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_date"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:maxLength="20"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:text="@string/text_today"
        android:textColor="@color/colorText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_date"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <EditText
            android:id="@+id/edtRemark"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/hint_enter_remark"
            android:imeOptions="actionDone"
            android:maxLength="50"
            android:paddingBottom="3dp"
            android:paddingEnd="2dp"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivRemark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:src="@drawable/ic_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRecordAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_date"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/ivRecordAccount"
            android:layout_width="15dp"
            android:layout_height="15dp"
            tools:src="@mipmap/assets_alipay" />

        <TextView
            android:id="@+id/tvRecordAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:maxLength="20"
            android:textColor="@color/colorText"
            tools:text="支付宝" />
    </LinearLayout>

</LinearLayout>